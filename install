#!/bin/bash


DOTFILES=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)

function arch() {
  echo "[+] Initalizing arch setup"
  source "setup/arch/setup.sh"
}

function usage() {
    echo "Usage: $0 [-a] [-u]"
    echo "  -a              Initialize Arch based linux setup"
    echo "  -o output_file  Initialize Ubuntu based linux setup"
    exit 1
}

while getopts ':au:' distro; do
  case "$distro" in
    a) arch ;;
    ?) usage ;;
  esac
done

